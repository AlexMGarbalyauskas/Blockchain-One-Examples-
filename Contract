//1
// License declaration and Solidity version
pragma solidity ^0.6.6; 
//1

//2
// ERC-20 interface defines the standard functions and events for token interaction
// Ensures compatibility with wallets and other smart contracts
interface ERC20Interface {
    // Returns the total number of tokens in existence
    function totalSupply() external view returns (uint256); 

    // Returns the balance of a specific account
    function balanceOf(address account) external view returns (uint256); 

    // Returns the number of tokens that an owner allowed a spender
    function allowance(address owner, address spender) external view returns (uint256); 

    // Transfers tokens from the sender to another address
    function transfer(address recipient, uint256 amount) external returns (bool); 

    // Approves a spender to spend a specified amount on behalf of the sender
    function approve(address spender, uint256 amount) external returns (bool); 

    // Transfers tokens from one address to another using allowance
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool); 

    // Events allow tracking of transactions on Etherscan or other explorers
    event Transfer(address indexed from, address indexed to, uint256 value); 
    event Approval(address indexed owner, address indexed spender, uint256 value); 
} 
//2

//3
// Contract implements ERC-20 standard interface
contract myToken is ERC20Interface {

    // Token symbol (short identifier)
    string public symbol = "ALX"; 

    // Token name
    string public name = "Alex Token"; 

    // Number of decimal places the token can be divided into
    uint8 public decimals = 18; 

    // Stores the total supply of the token
    uint public _totalSupply; 

    // Owner of the token (deployer)
    address public tokenOwner; 

    // Tracks balances of all addresses
    mapping(address => uint) private _balances; 

    // Tracks allowances of spenders per owner
    mapping(address => mapping(address => uint256)) private _allowances; 
//3

//4
// Constructor runs once when contract is deployed
constructor() public {
    tokenOwner = msg.sender; // Deployer becomes token owner

    // Mint exactly 200 tokens (considering decimals)
    _totalSupply = 200 * 10**uint(decimals); 

    // Assign all tokens to deployer
    _balances[tokenOwner] = _totalSupply; 

    // Emit transfer event from 0x0 to owner to indicate minting
    emit Transfer(address(0), tokenOwner, _totalSupply); 
}
//4

//5
// ERC-20 functions implemented as external override to match the interface

// Returns total supply of tokens
function totalSupply() external view override returns (uint256) {
    return _totalSupply; 
}

// Returns token balance of a specific address
function balanceOf(address account) external view override returns (uint256) {
    return _balances[account]; 
}

// Returns the remaining number of tokens that a spender can spend from an owner
function allowance(address owner, address spender) external view override returns (uint256) {
    return _allowances[owner][spender]; 
}

// Transfers tokens from sender to recipient
function transfer(address recipient, uint256 amount) external override returns (bool) {
    require(_balances[msg.sender] >= amount, "Insufficient balance"); 
    _balances[msg.sender] -= amount; 
    _balances[recipient] += amount; 
    emit Transfer(msg.sender, recipient, amount); 
    return true; 
}

// Approves a spender to transfer a specific amount from sender's balance
function approve(address spender, uint256 amount) external override returns (bool) {
    _allowances[msg.sender][spender] = amount; 
    emit Approval(msg.sender, spender, amount); 
    return true; 
}

//6
// Transfers tokens on behalf of an owner using allowance
function transferFrom(address sender, address recipient, uint256 amount) external override returns (bool) {
    require(_balances[sender] >= amount, "Insufficient balance"); 
    require(_allowances[sender][msg.sender] >= amount, "Allowance exceeded"); 

    _balances[sender] -= amount; 
    _balances[recipient] += amount; 
    _allowances[sender][msg.sender] -= amount; 

    // Emit events for transfer and updated allowance
    emit Transfer(sender, recipient, amount); 
    emit Approval(sender, msg.sender, _allowances[sender][msg.sender]); 
    return true; 
}
//6
} 
